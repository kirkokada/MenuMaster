<% provide :title, '' %>

<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="span8">
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center hero-unit">
		<h1>MenuMaster</h1>

		<h2>
			Let's party
		</h2>
		<%= link_to "Sign up", signup_path, class:"btn btn-large" %>
	</div>
<% end %>