<div class="table_row" id="ingredient_<%= ingredient.id %>">
	<span><%= ingredient.name %></span>
	<span><%= number_with_precision ingredient.calories, precision: 2 %></span>
	<span><%= number_with_precision ingredient.carbs, precision: 2 %></span>
	<span><%= number_with_precision ingredient.protein, precision: 2 %></span>
	<span><%= number_with_precision ingredient.fat, precision: 2 %></span>
	<% if recipe.user == current_user %>
		<span><%= link_to ingredient.amount, edit_recipe_ingredient_path(recipe, ingredient), remote: true %></span>
		<span>
			<%= link_to 'X', recipe_ingredient_path(recipe, ingredient), 
		                       method: :delete,
		                       class: "btn-small btn-danger",
		                       remote: true %>
		</span>
	<% else %>
		<span><%= number_with_precision ingredient.amount %></span>
	<% end %>
</div>