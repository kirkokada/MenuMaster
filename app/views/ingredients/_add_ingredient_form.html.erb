	<div id="food_<%= food.id %>" class="add_ingredient food_stats table_row">
		<%= render 'shared/basic_info', object: food %>
		<%= form_for([recipe, recipe.ingredients.build(food_id: food.id)], 
		              remote: true, html: { class: "ingredient_submit"}) do |f| %>
			<span class="amount-input">
				<%= f.label :amount, class: "hidden" %>
				<%= f.text_field :amount %>
			</span>
			<span>
				<%= f.hidden_field :food_id %>
				<%= f.submit "Add", class:"btn btn-small" %>
			</span>
		<% end %>
	</div>