<% provide :title, "Edit Recipe" %>

<div class="row">
	<div class="span6 offset3">
		<h1>Edit Recipe</h1>
		<%= form_for @recipe do |f| %>
			<%= render 'fields', f:f %>
			<%= f.submit "Update", class: "btn btn-success btn-inline" %>
			<%= link_to "Cancel", recipe_path(@recipe), class: "btn" %>
			<%= link_to "Delete", recipe_path(@recipe), method: :delete, class: "btn btn-danger" %>
		<% end %>
	</div>
</div>