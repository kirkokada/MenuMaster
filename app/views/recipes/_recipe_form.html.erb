<%= form_for recipe, remote: true do |f| %>
	<%= render 'fields', f:f %>
	<%= f.submit "Update", class: "btn btn-success btn-inline" %>
	<%= link_to "Cancel", recipe_path(recipe), class: "btn", remote: true %>
	<%= link_to "Delete", recipe_path(recipe), method: :delete, class: "btn btn-danger" %>
<% end %>